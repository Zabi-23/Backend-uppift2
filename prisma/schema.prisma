generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       Int      @id @default(autoincrement())
  title    String
  price    Float
  image    String
  orders   Order[]  // Lägg till denna rad för relationen till Order
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  orders   Order[]  // Lägg till denna rad för relationen till Order
  // Lägg till andra fält du behöver
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}
